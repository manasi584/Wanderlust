<%- layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">
        Signup on Wandelust !
    </h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          placeholder="enter username"
          type="text"
          class="form-control"
          id="username"
          required
        />
        <div class="valid-feedback"> Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email Id</label>
        <input
          name="email"
          placeholder="enter email Id"
          type="email"
          class="form-control"
          id="email"
          required
        />
       
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          placeholder="enter password Id"
          type="password"
          class="form-control"
          id="password"
          required
        />
       
      </div>
     <button class="btn btn-success mb-3">Signup</button>
    </form>
  </div>
</div>
